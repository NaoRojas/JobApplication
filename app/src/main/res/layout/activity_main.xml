<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context=".MainActivity"
    android:id="@+id/linearLayout">

    <LinearLayout

        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/gradient"
        android:focusableInTouchMode="false"
        android:orientation="vertical"

        >
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"

        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:padding="20dp"
        android:layout_marginEnd="16dp"

        app:cardBackgroundColor="#f3f3f3"
        app:cardCornerRadius="10dp"

        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="5sp"
                    app:srcCompat="@drawable/ic_work_black_24dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin"
                        android:layout_span="3"
                        android:layout_weight="3"
                        android:fontFamily="sans-serif-light"

                        android:text="Job Application"
                        android:textColor="@color/color_icon"
                        android:textSize="30dp" />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_column="1"
                        android:text="Please Complete the form below to apply
                             "
                        android:textColor="#000"
                        android:textSize="15dp" />
                </LinearLayout>


            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="5sp"
                    app:srcCompat="@drawable/ic_person_black_24dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-light"

                    android:text="Full Name"
                    android:textColor="@color/color_icon"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="First Name">


                </EditText>

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Last Name"></EditText>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="5sp"
                    app:srcCompat="@drawable/ic_location_on_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-light"
                    android:text="Current Address"
                    android:textColor="@color/color_icon"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/street_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Street Address Line 1"></EditText>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/street_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Street Address Line 2"></EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="City">


                </EditText>

                <EditText
                    android:id="@+id/state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Province"></EditText>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="5sp"
                    app:srcCompat="@drawable/ic_email_black_24dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-light"
                    android:text="Email Address"
                    android:textColor="@color/color_icon"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:hint="Email"
                    android:fontFamily="sans-serif-condensed-light">


                </EditText>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="5sp"
                    app:srcCompat="@drawable/ic_person_black_24dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-light"
                    android:text="Phone Number"
                    android:textColor="@color/color_icon"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/area_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Area Code"></EditText>

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Phone Number"></EditText>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="5sp"
                    app:srcCompat="@drawable/ic_work_black_24dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-light"
                    android:text="Position"
                    android:textColor="@color/color_icon"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Postion"></EditText>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="5sp"
                    app:srcCompat="@drawable/ic_date_range_black_24dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-light"
                    android:text="Date"
                    android:textColor="@color/color_icon"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Day"
                    android:inputType="date" ></EditText>


                <EditText
                    android:id="@+id/month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Month"
                    android:inputType="date" ></EditText>

                <EditText
                    android:id="@+id/year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="Year"
                    android:inputType="date" ></EditText>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="5sp"
                    app:srcCompat="@drawable/ic_file_download_black_24dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-light"
                    android:text="Upload File"
                    android:textColor="@color/color_icon"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="sans-serif-light"
                    android:text="Upload File"
                    android:textColor="#fff"></Button>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="15dp"
                    android:layout_margin="@dimen/margin"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:background="@drawable/button_send"
                    android:fontFamily="sans-serif-light"
                    android:text="Send"
                    android:textColor="#fff"></Button>

            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>
</RelativeLayout>