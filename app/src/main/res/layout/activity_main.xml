<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context=".MainActivity"
    android:id="@+id/linearLayout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="0dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginLeft="@dimen/margin"
                                android:layout_marginRight="5sp"
                                android:layout_marginBottom="@dimen/margin"
                                app:srcCompat="@drawable/ic_work_black_24dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_marginLeft="@dimen/margin"
                                    android:layout_span="3"
                                    android:layout_weight="3"
                                    android:fontFamily="sans-serif-black"
                                    android:text="Job Application"
                                    android:textColor="@color/color_icon"
                                    android:textSize="30dp" />

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_marginLeft="@dimen/margin"
                                    android:fontFamily="sans-serif-light"
                                    android:text="Please complete the form to apply a position

                             "
                                    android:textColor="#000"
                                    android:textSize="15dp" />
                            </LinearLayout>


                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:fontFamily="sans-serif-light"

                                android:text="Full \nName"
                                android:textColor="@color/color_icon"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/first_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="First Name">


                            </EditText>

                            <EditText
                                android:id="@+id/last_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_margin="@dimen/margin"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="Last Name"></EditText>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:fontFamily="sans-serif-light"
                                android:text="Address"
                                android:textColor="@color/color_icon"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/street_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_margin="@dimen/margin"
                                android:layout_span="3"
                                android:layout_weight="3"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="Street Address Line 1"></EditText>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/street_address2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_margin="@dimen/margin"
                                android:layout_span="3"
                                android:layout_weight="3"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="Street Address Line 2"></EditText>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/city"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_margin="@dimen/margin"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="City">


                            </EditText>

                            <Spinner
                                android:id="@+id/state"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_margin="@dimen/margin"
                                android:layout_weight="1"
                                android:entries="@array/spinnerItems"
                                android:fontFamily="sans-serif-condensed-light"

                                >

                            </Spinner>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:fontFamily="sans-serif-light"
                                android:text="Email \nAddress"
                                android:textColor="@color/color_icon"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:layout_span="3"
                                android:layout_weight="3"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="Email">


                            </EditText>

                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:fontFamily="sans-serif-light"
                                android:text="Phone \nNumber"
                                android:textColor="@color/color_icon"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/area_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_margin="@dimen/margin"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="Area Code"></EditText>

                            <EditText
                                android:id="@+id/phone_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_margin="@dimen/margin"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="Number"></EditText>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:fontFamily="sans-serif-light"
                                android:text="Position"
                                android:textColor="@color/color_icon"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_margin="@dimen/margin"
                                android:layout_span="3"
                                android:layout_weight="3"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="Postion"></EditText>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:fontFamily="sans-serif-light"
                                android:text="Date"
                                android:textColor="@color/color_icon"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_margin="@dimen/margin"
                                android:layout_span="3"
                                android:layout_weight="3"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="Date"></EditText>


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:fontFamily="sans-serif-light"
                                android:text="Upload \nFile"
                                android:textColor="@color/color_icon"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/file"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_margin="@dimen/margin"
                                android:layout_span="3"
                                android:layout_weight="3"
                                android:background="@drawable/rounded_button"
                                android:fontFamily="sans-serif-black"
                                android:text="Upload File"
                                android:textColor="#fff"></Button>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin">

                            <Button
                                android:id="@+id/send"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_margin="@dimen/margin"
                                android:layout_marginTop="15dp"
                                android:layout_span="3"
                                android:layout_weight="3"
                                android:background="@drawable/button_register"
                                android:fontFamily="sans-serif-black"
                                android:text="Send"
                                android:textColor="#fff"></Button>

                        </TableRow>
                    </TableLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>
</RelativeLayout>